mixin title(tag='h2', name='Title')
    case tag
        when 'h1'
            h1.title.title--h1(class!=attributes.class)= name
        when 'h2'
            h2.title.title--h2(class!=attributes.class)= name
        when 'h3'
            h3.title.title--h3(class!=attributes.class)= name
        when 'h4'
            h4.title.title--h4(class!=attributes.class)= name
        default
            span Title not found
